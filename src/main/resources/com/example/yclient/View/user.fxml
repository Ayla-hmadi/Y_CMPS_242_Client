                                        <Insets bottom="4.0" />
                                    </VBox.margin>
                                    <font>
                                        <Font name="System Bold" size="14.0" />
                                    </font>
                                </Label>
                                <Label fx:id="usernameLabel" prefHeight="17.0" prefWidth="159.0" text="\@username" textFill="#000000b3">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                            </children>
                            <BorderPane.margin>
                                <Insets left="8.0" />
                            </BorderPane.margin>
                        </VBox>
                    </center>
                </BorderPane>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="36.0" top="20.0" />
                </padding>
            </VBox>
        </left>

